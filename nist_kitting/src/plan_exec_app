#!/usr/bin/python

import sys, time, getopt, re, socket, ConfigParser, StringIO, xml.etree.ElementTree as ET

from crcl import *

xmldec = "<?xml version=\"1.0\" encoding=\"UTF-8\"?>"
uri = "http://www.w3.org/2001/XMLSchema-instance"
xsi = "{" + uri + "}"
dict = {"xmlns:xsi" : uri}

INIFILE = ""
PLANFILE = ""
ROBOT_PORT = ""
ROBOT_HOST = ""
GRIPPER_PORT = ""
GRIPPER_HOST = ""
DEBUG = False

XAXIS = VectorType(1, 0, 0)
ZAXIS = VectorType(0, 0, 1)

def readStatus(port):
    size = 1024

    try: data = port.recv(size)
    except: return False, 0, CommandStateType.ERROR

    try:
        tree = ET.parse(StringIO.StringIO(data))
        root = tree.getroot()
    except: return False, 0, CommandStateType.ERROR

    for child in root:
        if child.tag == "CommandStatus":
            cid = int(child.findtext("CommandID"))
            sid = int(child.findtext("StatusID"))
            cs = toCommandStateType(child.findtext("CommandState"))
            return True, cid, cs
        else: return False, 0, CommandStateType.ERROR

