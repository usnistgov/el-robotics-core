    return True

def Move_Over_Kittray(toks, robot_port, gripper_port):
    # print toks
    return True

def Move_Over_Part(toks, robot_port, gripper_port):
    out = ""
    # (move-over-part robot_1 part_gripper gearbox_base_tray gearbox_base_1 stock_keeping_unit_gearbox_base)
    if len(toks) < 6: return
    print toks[0], "using", toks[1], "with", toks[2], "to location", toks[3], "to get", toks[4], "of SKU", toks[5]
    return True

def Place_Kit(toks, robot_port, gripper_port):
    # print toks
    return True

def Place_Kittray(toks, robot_port, gripper_port):
    # print toks
    return True

def Place_Part(toks, robot_port, gripper_port):
    # (place-part robot_1 gearbox_base_1 stock_keeping_unit_gearbox_base kit_gearbox part_gripper work_table_1 shaft_tray)
    if len(toks) < 8: return
    print toks[0], "using", toks[1], "for part", toks[2], "of SKU", toks[3], "to location", toks[4], "using", toks[5], "if on", toks[6], "and", toks[7]

    # //! Configure gripper for pre-grasp
    # pm.demo->Decouple(curtool);
    m = OpenToolChangerType(101)
    gripper_port.send(str(m))
    fail = time.time() + 3
    while True:
        ret, cid, cs = readStatus(gripper_port)
        if (ret == True) and (cid == 101):
            if cs == CommandStateType.DONE: break
            elif cs == CommandStateType.ERROR: return False
        if time.time() > fail: return False
        time.sleep(1)

    # pm.demo->Couple(curtool);
    m = CloseToolChangerType(102)
    gripper_port.send(str(m))
    time.sleep(1)
    # //! Open gripper
    # pm.demo->SetTool (0.9);
    m = SetEndEffectorParametersType(103, ParameterSettingType("set", 0.9))
    gripper_port.send(str(m))
    time.sleep(1)
    # //! Move over part at z position
    # pm.demo->MoveTo (poseMe)
    m = MoveThroughToType(104, False, [PoseOnlyLocationType(PointType(0,0,0), XAXIS, ZAXIS)])
    robot_port.send(str(m))
    time.sleep(1)
    # //! Grasp part
    # pm.demo->SetTool (0.1);
    m = SetEndEffectorParametersType(105, ParameterSettingType("set", 0.1))
    gripper_port.send(str(m))
    time.sleep(1)
    # //! Move over the part at z position
    # pm.demo->MoveTo (poseMe)
    m = MoveThroughToType(106, False, [PoseOnlyLocationType(PointType(0,0,0), XAXIS, ZAXIS)])
    robot_port.send(str(m))
    time.sleep(1)
    return True

